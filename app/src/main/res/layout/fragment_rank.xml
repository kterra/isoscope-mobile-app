<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:text="Carro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mode"
        android:textSize="16dp"
        android:paddingLeft="20dp"
        android:paddingBottom="5dp"
        android:textColor="@color/colorPrimaryDisable"
        android:fontFamily="sans-serif-condensed"/>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_start_point"
        android:layout_gravity="top"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        card_view:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
             >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_directions_car_24dp"
                android:padding="10dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:text="5 min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time"
                android:textSize="16dp"
                android:paddingLeft="40dp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:fontFamily="sans-serif-condensed"/>

            <TextView
                android:text="Utilidade Estimada: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rak"
                android:textSize="16dp"
                android:paddingLeft="30dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:fontFamily="sans-serif-condensed"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_place_24dp"
                android:tint="@color/colorPrimaryDisable"
                android:padding="10dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:text="Rua Barão de Mesquita, 459"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/location"
                android:textSize="16dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorPrimaryDisable"
                android:fontFamily="sans-serif-condensed"/>
        </LinearLayout>
</LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:text="A pé"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mode2"
        android:textSize="16dp"
        android:paddingLeft="20dp"
        android:paddingBottom="5dp"
        android:textColor="@color/colorPrimaryDisable"
        android:fontFamily="sans-serif-condensed"/>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="top"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        card_view:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_directions_walk_24dp"
                    android:padding="10dp"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:text="5 min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/time2"
                    android:textSize="16dp"
                    android:paddingLeft="40dp"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="sans-serif-condensed"/>

                <TextView
                    android:text="Utilidade Estimada: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rank"
                    android:textSize="16dp"
                    android:paddingLeft="30dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="sans-serif-condensed"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_place_24dp"
                    android:tint="@color/colorPrimaryDisable"
                    android:padding="10dp"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:text="Rua Barão de Mesquita, 459"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/location2"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorPrimaryDisable"
                    android:fontFamily="sans-serif-condensed"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/fab_margin"
        android:onClick="floatingActionButtonClicked"
        app:srcCompat="@drawable/ic_add_location_24dp" />
</LinearLayout>